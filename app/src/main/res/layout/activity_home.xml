<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.user.austgroove.Home"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/Home_layout8"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#EEEEEE">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:background="@drawable/back"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iconImageViewID"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:src="@drawable/icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="AUST GROOVE"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/Home_layout7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="215dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical">

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="135dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <android.support.v7.widget.CardView
                                    android:clickable="true"
                                    android:id="@+id/activitesID"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:id="@+id/Home_layout1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/profileImageView"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/academic_activity" />

                                        <TextView
                                            android:id="@+id/home_TV1ID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/profileImageView"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:text="Activities"
                                            android:textSize="16dp" />

                                        <Button
                                            android:id="@+id/buttonActivityID"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/cardview_shadow_end_color" />

                                    </RelativeLayout>

                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/noticeBoardID"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:id="@+id/Home_layout2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/noticeboardImageView"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/notice_board" />

                                        <TextView
                                            android:id="@+id/home_TV2ID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/noticeboardImageView"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:text="Notice Board"
                                            android:textSize="16dp" />

                                        <Button
                                            android:id="@+id/buttonNoticeBoardID"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/cardview_shadow_end_color" />

                                    </RelativeLayout>

                                </android.support.v7.widget.CardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="135dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <android.support.v7.widget.CardView
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/iumsID"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:id="@+id/Home_layout3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/confortImageView"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/iums2" />

                                        <TextView
                                            android:id="@+id/home_TV3ID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/confortImageView"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:text="IUMS"
                                            android:textSize="16dp" />

                                        <Button
                                            android:id="@+id/buttoniumsID"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/cardview_shadow_end_color" />

                                    </RelativeLayout>

                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/reminderID"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:id="@+id/Home_layout4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/reminderImageView"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/reminder2" />

                                        <TextView
                                            android:id="@+id/home_TV4ID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/reminderImageView"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:text="Reminder"
                                            android:textSize="16dp" />

                                        <Button
                                            android:id="@+id/buttonReminderID"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/cardview_shadow_end_color" />

                                    </RelativeLayout>

                                </android.support.v7.widget.CardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="135dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <android.support.v7.widget.CardView
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/cgpaCalculatorID"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:id="@+id/Home_layout5"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/goalImageView"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/calculator" />

                                        <TextView
                                            android:id="@+id/home_TV5ID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/goalImageView"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:text="CGPA Calculator"
                                            android:textSize="16dp" />

                                        <Button
                                            android:id="@+id/buttoncgpaID"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/cardview_shadow_end_color" />

                                    </RelativeLayout>

                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:id="@+id/DiaryID"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:id="@+id/Home_layout6"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/healthImageView"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/diary" />

                                        <TextView
                                            android:id="@+id/home_TV6ID"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/healthImageView"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="10dp"
                                            android:text="ToDo List"
                                            android:textSize="16dp" />

                                        <Button
                                            android:id="@+id/buttonDiaryID"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/cardview_shadow_end_color" />

                                    </RelativeLayout>

                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </FrameLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_drawer" />

</android.support.v4.widget.DrawerLayout>