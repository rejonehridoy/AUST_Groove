<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CGPAResultShow">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/CGPAShow_layoutID"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000000"
            android:text="MARK SHEET"
            android:layout_gravity="center"
            android:textStyle="bold|italic"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView

            android:text="Name : "
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rsnameID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView

            android:text="ID : "
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rsidID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView

            android:textColor="#000000"
            android:text="Marks"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView

            android:text="SUB 1"
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rssub1ID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp" />

        <TextView

            android:text="SUB 2"
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rssub2ID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp" />

        <TextView

            android:text="SUB 3"
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rssub3ID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp" />

        <TextView

            android:text="SUB 5"
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rssub4ID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp" />

        <TextView

            android:text="SUB 6"
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rssub5ID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp" />

        <TextView

            android:text="SUB 7"
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rssub6ID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp" />

        <TextView

            android:text="SUB 8"
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rssub7ID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp" />

        <TextView

            android:text="SUB 9"
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rssub8ID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp" />

        <TextView


            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rssub9ID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp" />

        <TextView

            android:text="test 2"
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/rssub10ID"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp" />

        <TextView
            android:textColor="@color/material_magenda"
            android:id="@+id/rsGPAid"
            android:text="GPA : "
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:textColor="@color/material_deep_peurple"
            android:id="@+id/rstotalmarksid"
            android:text="Total Marks : "
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/rssaveID"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:text="save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/rsshareID"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:text="share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>
</ScrollView>